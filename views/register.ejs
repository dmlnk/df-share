<div class="d-flex justify-content-center mt-3">
    <form class="card p-3" method="POST" autocomplete="on" action="/user/register">
        <h1>Registration:</h1>
        <label for="name">Username:</label>
        <input type="text" id="name" name="username" placeholder="John">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="email@domain.en">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="********">
        <label for="repassword">Repeat password:</label>
        <input type="password" id="repassword" name="password2" placeholder="********">
        <input type="submit" value="Send" class="actbutton mt-3"/>
        <input type="reset" value="Clear" class="actbutton mt-3 "/>
        <button class="actbutton mt-3" type="button"><a class="btn" href="/google">Sign in with Google</a></button>
    </form>
</div>

